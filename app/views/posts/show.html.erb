<div class="container my-5">
  <div style="max-width: 700px; top: -80px;" class="mx-auto text-secondary">
    <h1 class="font-weight-bold text-dark"><%= @post.title %></h1>
    <p class="my-2" style="line-height: 2;"><%= @post.body %></p>
    <div class="my-3 d-flex align-items-center justify-content-between">
      <div class="d-flex align-items-center">
        <img src="https://github.com/twbs.png" alt="twbs" width="50" height="50" class="rounded-circle flex-shrink-0"/>
        <small class="ms-2 d-flex flex-column">
          <span><%= user_signed_in? ?  @post.user.first_name + ' ' + @post.user.last_name : 'Anonymous' %></span>
          <span><%= @post.created_at.strftime("%b %-d, %Y") %></span>
        </small>
      </div>
    </div>
    <div class="row mt-5 pt-3">
      <div class="col-4 d-flex">
        <%= link_to "< Previous Post", @post.previous_post, class: 'btn btn-sm btn-primary border-1 me-auto' if @post.previous_post %>
      </div>
      <div class="col-4 d-flex text-center">
        <% if user_signed_in? && current_user.id == @post.user_id %>
          <div class="btn-group" role="group" aria-label="Button group example">
            <%= link_to 'Edit Post', edit_post_path(@post), class: 'btn btn-sm btn-primary border-1 ms-1' %>
            <%= link_to "Delete Post", @post, method: :delete, data: { confirm: "Are you sure you want to delete this post?" }, class: 'btn btn-sm btn-primary border-1 ms-1' %>
          </div>
        <% end %>
      </div>
      <div class="col-4 d-flex">
        <%= link_to "Next Post >", @post.next_post, class: 'btn btn-sm btn-primary border-1 ms-auto' if @post.next_post %>
      </div>
    </div>
  </div>
</div>
