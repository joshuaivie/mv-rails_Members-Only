<div class="text-center mb-3">
  <h3>Sign up</h3>
</div>
<div class="row">
  <div class="col-8 m-auto">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification class: 'alert-dismissible fade show mb-0', role: 'alert' do %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      <% end %>
      <%= f.input :first_name, label: 'First Name', required: true, autofocus: true, input_html: { autocomplete: "first-name", class: 'form-control' }, wrapper_html: { class: 'mb-3 position-relative' }, hint_html: { class: 'form-hint' } %>
      <%= f.input :last_name, label: 'Last Name', required: true, autofocus: true, input_html: { autocomplete: "last-name", class: 'form-control' }, wrapper_html: { class: 'mb-3 position-relative' }, hint_html: { class: 'form-hint' } %>
      <%= f.input :email, label: 'Email Address', required: true, autofocus: true, input_html: { autocomplete: "email", class: 'form-control' }, wrapper_html: { class: 'mb-3 position-relative' }, hint_html: { class: 'form-hint' } %>
      <%= f.input :password, label: 'Password', required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { autocomplete: "new-password", class: 'form-control' }, wrapper_html: { class: 'mb-3 position-relative' }, hint_html: { class: 'form-hint' } %>
      <%= f.input :password_confirmation, label: 'Confirm Password', required: true, input_html: { autocomplete: "new-password", class: 'form-control' }, wrapper_html: { class: 'mb-3 position-relative' },  hint_html: { class: 'form-hint' } %>
      <%= f.button :submit, "Sign up", class: 'w-100 btn btn-primary' %>
    <% end %>
    <div class="form-actions d-flex flex-column mt-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
