<div class="text-center mb-3">
  <h3>Forgot your password?</h3>
</div>
<div class="row">
  <div class="col-8 m-auto">
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>
      <%= f.input :email, label: 'Email Address', required: false, autofocus: true, input_html: { autocomplete: "email", class: 'form-control' }, wrapper_html: { class: 'mb-3 position-relative' } %>
      <%= f.button :submit, "Send me reset password instructions", class: 'w-100 btn btn-primary' %>
    <% end %>
    <div class="form-actions d-flex flex-column mt-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
